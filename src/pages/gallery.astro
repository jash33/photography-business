---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import GalleryGrid from '../components/GalleryGrid.astro';

const base = import.meta.env.BASE_URL;

// Sample gallery images (replace with real portfolio)
const galleryImages = [
  {
    image: 'https://images.unsplash.com/photo-1519741497674-611481863552?w=800&q=80',
    title: 'Sarah & James',
    category: 'Wedding',
    href: `${base}gallery/sarah-james/`
  },
  {
    image: 'https://images.unsplash.com/photo-1537633552985-df8429e8048b?w=800&q=80',
    title: 'Desert Dreams',
    category: 'Couples',
    href: `${base}gallery/desert-dreams/`
  },
  {
    image: 'https://images.unsplash.com/photo-1522673607200-164d1b6ce486?w=800&q=80',
    title: 'Golden Hour Love',
    category: 'Engagement',
    href: `${base}gallery/golden-hour/`
  },
  {
    image: 'https://images.unsplash.com/photo-1591604466107-ec97de577aff?w=800&q=80',
    title: 'Intimate Moments',
    category: 'Wedding',
    href: `${base}gallery/intimate-moments/`
  },
  {
    image: 'https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=800&q=80',
    title: 'Natural Beauty',
    category: 'Portrait',
    href: `${base}gallery/natural-beauty/`
  },
  {
    image: 'https://images.unsplash.com/photo-1583939003579-730e3918a45a?w=800&q=80',
    title: 'Sunset Vows',
    category: 'Wedding',
    href: `${base}gallery/sunset-vows/`
  },
  {
    image: 'https://images.unsplash.com/photo-1529634806980-85c3dd6d34ac?w=800&q=80',
    title: 'Wild & Free',
    category: 'Couples',
    href: `${base}gallery/wild-free/`
  },
  {
    image: 'https://images.unsplash.com/photo-1460978812857-470ed1c77af0?w=800&q=80',
    title: 'Classic Romance',
    category: 'Engagement',
    href: `${base}gallery/classic-romance/`
  },
  {
    image: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=800&q=80',
    title: 'Modern Portrait',
    category: 'Portrait',
    href: `${base}gallery/modern-portrait/`
  }
];
---

<Layout title="Gallery">
  <Hero 
    title="Gallery"
    subtitle="A Collection of Love Stories"
    backgroundImage="https://images.unsplash.com/photo-1465495976277-4387d4b0b4c6?w=1920&q=80"
    height="medium"
    overlayOpacity={0.3}
  />
  
  <section class="gallery section">
    <div class="gallery__container container">
      <div class="gallery__filter">
        <button class="gallery__filter-btn gallery__filter-btn--active" data-filter="all">All</button>
        <button class="gallery__filter-btn" data-filter="wedding">Wedding</button>
        <button class="gallery__filter-btn" data-filter="engagement">Engagement</button>
        <button class="gallery__filter-btn" data-filter="couples">Couples</button>
        <button class="gallery__filter-btn" data-filter="portrait">Portrait</button>
      </div>
      
      <GalleryGrid items={galleryImages} columns={3} />
      
      <div class="gallery__cta text-center">
        <p class="gallery__cta-text">Ready to create your own love story?</p>
        <a href={`${import.meta.env.BASE_URL}contact/`} class="btn">Get In Touch</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .gallery {
    background: var(--color-white);
  }
  
  .gallery__filter {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-2xl);
  }
  
  .gallery__filter-btn {
    font-family: var(--font-sans);
    font-size: 0.7rem;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-charcoal);
    background: transparent;
    border: 1px solid var(--color-beige);
    padding: var(--spacing-xs) var(--spacing-md);
    cursor: pointer;
    transition: all var(--transition-fast);
  }
  
  .gallery__filter-btn:hover,
  .gallery__filter-btn--active {
    background: var(--color-charcoal);
    border-color: var(--color-charcoal);
    color: var(--color-white);
  }
  
  .gallery__cta {
    margin-top: var(--spacing-3xl);
    padding-top: var(--spacing-2xl);
    border-top: 1px solid var(--color-beige);
  }
  
  .gallery__cta-text {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-style: italic;
    color: var(--color-charcoal);
    margin-bottom: var(--spacing-md);
  }
</style>
