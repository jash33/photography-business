---
interface GalleryItem {
  image: string;
  title: string;
  category?: string;
  href?: string;
}

interface Props {
  items: GalleryItem[];
  columns?: 2 | 3 | 4;
}

const { items, columns = 3 } = Astro.props;
---

<div class={`gallery-grid gallery-grid--${columns}col`}>
  {items.map((item) => (
    <a href={item.href || '#'} class="gallery-grid__item">
      <div class="gallery-grid__image-wrapper">
        <img 
          src={item.image} 
          alt={item.title}
          class="gallery-grid__image"
          loading="lazy"
        />
        <div class="gallery-grid__overlay">
          <span class="gallery-grid__label">View</span>
          <h3 class="gallery-grid__title">{item.title}</h3>
          {item.category && (
            <span class="gallery-grid__category">{item.category}</span>
          )}
        </div>
      </div>
    </a>
  ))}
</div>

<style>
  .gallery-grid {
    display: grid;
    gap: var(--spacing-sm);
  }
  
  .gallery-grid--2col {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .gallery-grid--3col {
    grid-template-columns: repeat(1, 1fr);
  }
  
  .gallery-grid--4col {
    grid-template-columns: repeat(2, 1fr);
  }
  
  @media (min-width: 600px) {
    .gallery-grid--3col {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .gallery-grid--4col {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  @media (min-width: 900px) {
    .gallery-grid--3col {
      grid-template-columns: repeat(3, 1fr);
    }
    
    .gallery-grid--4col {
      grid-template-columns: repeat(4, 1fr);
    }
  }
  
  .gallery-grid__item {
    display: block;
    text-decoration: none;
  }
  
  .gallery-grid__image-wrapper {
    position: relative;
    overflow: hidden;
    aspect-ratio: 4 / 5;
  }
  
  .gallery-grid__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }
  
  .gallery-grid__item:hover .gallery-grid__image {
    transform: scale(1.05);
  }
  
  .gallery-grid__overlay {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: rgba(42, 42, 42, 0.6);
    opacity: 0;
    transition: opacity var(--transition-normal);
    padding: var(--spacing-md);
    text-align: center;
  }
  
  .gallery-grid__item:hover .gallery-grid__overlay {
    opacity: 1;
  }
  
  .gallery-grid__label {
    font-family: var(--font-sans);
    font-size: 0.65rem;
    font-weight: 500;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-white);
    margin-bottom: var(--spacing-xs);
  }
  
  .gallery-grid__title {
    font-family: var(--font-serif);
    font-size: clamp(1.25rem, 3vw, 2rem);
    font-weight: 400;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-white);
    margin: 0;
  }
  
  .gallery-grid__category {
    font-family: var(--font-sans);
    font-size: 0.7rem;
    letter-spacing: 0.1em;
    color: var(--color-white);
    opacity: 0.8;
    margin-top: var(--spacing-xs);
  }
</style>
