---
interface Props {
  title: string;
  subtitle?: string;
  backgroundImage: string;
  overlayOpacity?: number;
  height?: 'full' | 'tall' | 'medium';
}

const { 
  title, 
  subtitle,
  backgroundImage,
  overlayOpacity = 0.1,
  height = 'full'
} = Astro.props;

const heightClass = {
  full: 'hero--full',
  tall: 'hero--tall',
  medium: 'hero--medium'
}[height];
---

<section class={`hero ${heightClass}`}>
  <div class="hero__background" style={`background-image: url(${backgroundImage})`}></div>
  <div class="hero__overlay" style={`opacity: ${overlayOpacity}`}></div>
  
  <div class="hero__content">
    <h1 class="hero__title">{title}</h1>
    {subtitle && <p class="hero__subtitle">{subtitle}</p>}
  </div>
  
  <div class="hero__scroll-indicator" aria-hidden="true">
    <span class="hero__scroll-arrow">â†“</span>
  </div>
</section>

<style>
  .hero {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  
  .hero--full {
    min-height: 100vh;
  }
  
  .hero--tall {
    min-height: 80vh;
  }
  
  .hero--medium {
    min-height: 60vh;
  }
  
  .hero__background {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
  
  .hero__overlay {
    position: absolute;
    inset: 0;
    background: var(--color-dark);
  }
  
  .hero__content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: var(--spacing-lg);
    max-width: 1200px;
  }
  
  .hero__title {
    font-family: var(--font-serif);
    font-size: clamp(3rem, 12vw, 10rem);
    font-weight: 300;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-white);
    line-height: 1;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.2);
  }
  
  .hero__subtitle {
    font-family: var(--font-sans);
    font-size: clamp(0.7rem, 1.5vw, 0.9rem);
    font-weight: 400;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: var(--color-white);
    margin-top: var(--spacing-md);
    text-shadow: 0 1px 10px rgba(0, 0, 0, 0.3);
  }
  
  .hero__scroll-indicator {
    position: absolute;
    bottom: var(--spacing-xl);
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
  }
  
  .hero__scroll-arrow {
    display: block;
    color: var(--color-white);
    font-size: 1.5rem;
    animation: bounce 2s infinite;
    opacity: 0.7;
  }
  
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }
</style>
